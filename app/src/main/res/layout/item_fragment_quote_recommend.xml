<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data></data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_height_item_fragment_quote"
        android:background="@drawable/fragment_quote_recommend_item_touch_bg"
        android:clickable="true"
        android:focusable="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/quote_name"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="start|center_vertical"
            android:padding="@dimen/padding_5dp"
            android:text=""
            android:maxLines="1"
            app:autoSizeTextType="uniform"
            app:autoSizeMinTextSize="@dimen/font_size_tiny_high"
            app:autoSizeMaxTextSize="@dimen/font_size_normal"
            app:autoSizeStepGranularity="1sp"
            android:textColor="@color/text_yellow"
            android:textSize="@dimen/font_size_normal" />

        <TextView
            android:id="@+id/quote_latest"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="end|center_vertical"
            android:padding="@dimen/padding_5dp"
            android:text=""
            android:maxLines="1"
            app:autoSizeTextType="uniform"
            app:autoSizeMinTextSize="@dimen/font_size_tiny_high"
            app:autoSizeMaxTextSize="@dimen/font_size_normal"
            app:autoSizeStepGranularity="1sp"
            android:textColor="@color/text_white"
            android:textSize="@dimen/font_size_normal" />

        <TextView
            android:id="@+id/quote_change_percent"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="end|center_vertical"
            android:padding="@dimen/padding_5dp"
            android:text=""
            android:maxLines="1"
            app:autoSizeTextType="uniform"
            app:autoSizeMinTextSize="@dimen/font_size_tiny_high"
            app:autoSizeMaxTextSize="@dimen/font_size_normal"
            app:autoSizeStepGranularity="1sp"
            android:textColor="@color/text_white"
            android:textSize="@dimen/font_size_normal" />

        <TextView
            android:drawableEnd="@mipmap/ic_recommend_add"
            android:id="@+id/add_recommend"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingEnd="@dimen/padding_10dp"
            android:gravity="end|center_vertical" />
    </LinearLayout>
</layout>
