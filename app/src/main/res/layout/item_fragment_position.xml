<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data></data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/item_touch_bg"
        android:clickable="true"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/position_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center"
            android:paddingBottom="@dimen/padding_4dp"
            android:paddingTop="@dimen/padding_4dp"
            android:textColor="@color/white"
            android:textSize="@dimen/font_size_normal"/>

        <TextView
            android:id="@+id/position_direction"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingBottom="@dimen/padding_4dp"
            android:paddingTop="@dimen/padding_4dp"
            android:textColor="@color/text_red"
            android:textSize="@dimen/font_size_normal"/>

        <TextView
            android:id="@+id/position_volume"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingBottom="@dimen/padding_4dp"
            android:paddingTop="@dimen/padding_4dp"
            android:textColor="@color/white"
            android:textSize="@dimen/font_size_normal"/>

        <TextView
            android:id="@+id/position_available"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingBottom="@dimen/padding_4dp"
            android:paddingTop="@dimen/padding_4dp"
            android:textColor="@color/white"
            android:textSize="@dimen/font_size_normal"/>

        <TextView
            android:id="@+id/position_open_price"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center"
            android:paddingBottom="@dimen/padding_4dp"
            android:paddingTop="@dimen/padding_4dp"
            android:textColor="@color/white"
            android:textSize="@dimen/font_size_normal"/>

        <TextView
            android:id="@+id/position_profit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center"
            android:paddingBottom="@dimen/padding_4dp"
            android:paddingTop="@dimen/padding_4dp"
            android:textColor="@color/text_red"
            android:textSize="@dimen/font_size_normal"/>

    </LinearLayout>
</layout>
